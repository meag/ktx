CC=@CC@
RM=@RM@

INSTALLDIR=$(PREFIX)/sbin

MODULE=../qwprogs.so

# KTX does't work as 64bit binary, to compile KTX as 32bit on 64bit target platform use next:
# for gcc its like: make dl FORCE32BITFLAGS=-m32
FORCE32BITFLAGS=-m32

CFLAGS=-g -Wall -O2 -fPIC $(FORCE32BITFLAGS)
LDFLAGS=-shared $(FORCE32BITFLAGS)
INCFLAGS=-I../include

LIBS=@LIBS@

SOURCES=native_lib.c buttons.c client.c combat.c doors.c g_cmd.c g_main.c \
	g_mem.c g_spawn.c g_syscalls.c g_utils.c items.c mathlib.c misc.c \
	plats.c player.c q_shared.c server.c spectate.c subs.c triggers.c \
	weapons.c world.c clan_arena.c \
	admin.c captain.c commands.c globals.c logs.c maps.c match.c motd.c vip.c vote.c \
	g_userinfo.c grapple.c runes.c ctf.c arena.c hoonymode.c race.c \
	sp_ai.c sp_boss.c sp_client.c sp_demon.c sp_dog.c sp_enforcer.c sp_fish.c sp_hknight.c sp_knight.c \
	sp_monsters.c sp_ogre.c sp_oldone.c sp_shalrath.c sp_shambler.c sp_soldier.c sp_tarbaby.c sp_wizard.c sp_zombie.c \
	maps_map_aerowalk.c maps_map_amphi2.c maps_map_dm3.c maps_map_dm4.c maps_map_dm6.c maps_map_e1m2.c \
	maps_map_frobodm2.c maps_map_pkeg1.c maps_map_povdmm4.c maps_map_spinev2.c maps_map_ukooldm2.c maps_map_ukooldm3.c \
	maps_map_ukooldm6.c maps_map_ukooldm8.c maps_map_ultrav.c maps_map_ztndm1.c maps_map_ztndm2.c maps_map_ztndm3.c \
	maps_map_ztndm4.c maps_map_ztndm5.c maps_map_ztndm6.c \
	bot_aim.c bot_blocked.c bot_botenemy.c bot_botgoals.c bot_bothazd.c bot_bothelp.c bot_botimp.c bot_botjump.c \
	bot_botpath.c bot_botphys.c bot_botstat.c bot_botthink.c bot_botwater.c bot_botweap.c bot_client.c \
	bot_commands.c bot_items.c bot_loadmap.c bot_match.c bot_movement.c bot_routing.c bot_world.c \
	fb_globals.c marker_load.c marker_util.c route_calc.c route_fields.c route_lookup.c teamplay.c files.c

OBJECTS=$(SOURCES:.c=.o)

all:		build

build:		$(MODULE)

install:	build
			../install-sh -c -m 755 $(MODULE) $(INSTALLDIR)

clean:
			$(RM) -f $(OBJECTS) $(MODULE) *~

distclean:	clean
			$(RM) -f *.orig *.rej *.tmp Makefile.dl32

.c.o:
			$(CC) $(CFLAGS) $(INCFLAGS) -c $<

$(MODULE):	$(OBJECTS)
			$(CC) $(LDFLAGS) -o $(MODULE) $(OBJECTS) $(LIBS)
